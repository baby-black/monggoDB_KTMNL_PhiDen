<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>Danh sách đặt chỗ</title>
</head>
<body>
  <h1>Danh sách đặt chỗ</h1>
  <a href="/bookings/new">Thêm đặt chỗ mới</a>
  <table>
    <tr>
      <th>ID</th>
      <th>Tên khách hàng</th>
      <th>Ngày</th>
      <th>Giờ</th>
      <th>Trạng thái</th>
      <th>Hành động</th>
    </tr>
    <% bookings.forEach(booking => { %>
      <tr>
        <td><%= booking._id %></td>
        <td><%= booking.customerName %></td>
        <td><%= booking.date.toISOString().split('T')[0] %></td>
        <td><%= booking.time %></td>
        <td class="<%= booking.status.toLowerCase() %>"><%= booking.status %></td>
        <td>
          <a href="/bookings/<%= booking._id %>/edit">Sửa</a>
          <form action="/bookings/<%= booking._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Hủy</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
